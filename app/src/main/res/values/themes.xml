<resources>
    <style name="Theme.FragmentSample" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="SecondTheme" parent="Theme.FragmentSample">
        <item name="colorPrimary">#facc00</item>
        <item name="colorPrimaryVariant">#facc00</item>
        <item name="colorOnPrimary">#facc00</item>
        <item name="colorSecondary">#facc00</item>
        <item name="colorSecondaryVariant">#facc00</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#facc00</item>
        <item name="android:windowBackground">#facc00</item>
        <item name="android:textColorPrimary">#BC3636</item>
        <item name="toolbarStyle">@style/MyToolbarSecond</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="MyToolbarSecond" parent="MyToolbar">
        <item name="android:background">@color/yellow</item>
    </style>
</resources>
